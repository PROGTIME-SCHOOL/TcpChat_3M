<Window x:Class="Tcp_Controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tcp_Controller"
        mc:Ignorable="d"
        Title="Tcp Controller" Height="250" Width="400">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Click="ButtonLeft_Click" Width="100" Height="40" Content="LEFT" 
                    Margin="10"/>
            
            <Button Click="ButtonRight_Click" Width="100" Height="40" Content="RIGHT" 
                    Margin="10"/>
        </StackPanel>

        <Button Width="100" Height="20" Margin="10" HorizontalAlignment="Left"
                VerticalAlignment="Bottom" Content="CONNECT"
                Click="ButtonConnect_Click"/>
    </Grid>
</Window>
